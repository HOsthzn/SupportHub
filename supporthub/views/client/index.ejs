<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2><%= title %></h2>
        </div>

        <% if (error?.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <a class="btn btn-primary" href="/client/create">Add</a>
        <table>
            <thead>
            <tr>
                <th>name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <% for(let client of data) { %>
                <tr>
                    <td><%= client.name %></td>
                    <td>
                        <a class="btn btn-secondary" href="/client/edit/<%= client.id %>">Edit</a>
                        <a class="btn btn-info" href="/client/details/<%= client.id %>">Details</a>
                        <a class="btn btn-danger" href="/client/delete/<%= client.id %>">Delete</a>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>

    </div>
</div>
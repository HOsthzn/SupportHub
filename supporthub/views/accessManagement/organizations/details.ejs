<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/accessManagement/organizations/index">Organizations</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= data.settings.name %></li>
    </ol>
</nav>
<ul class="nav nav-tabs" id="detailTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="projects-tab" data-bs-toggle="tab" data-bs-target="#projects-tab-pane"
                type="button" role="tab" aria-controls="projects-tab-pane" aria-selected="false">Projects
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings-tab-pane"
                type="button" role="tab" aria-controls="settings-tab-pane" aria-selected="true">Settings
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="access-tab" data-bs-toggle="tab" data-bs-target="#access-tab-pane"
                type="button" role="tab" aria-controls="access-tab-pane" aria-selected="false">Access
        </button>
    </li>
</ul>
<div class="tab-content" id="detailTabsContent">
    <div class="tab-pane fade" id="projects-tab-pane" role="tabpanel" aria-labelledby="projects-tab" tabindex="0">
        <button class="btn btn-primary">Move project here</button>
        <table>
            <thead>
            <tr>
                <th></th>
                <th>Name</th>
            </tr>

            </thead>
        </table>
    </div>
    <div class="tab-pane fade show active" id="settings-tab-pane" role="tabpanel" aria-labelledby="settings-tab"
         tabindex="0">
        <form method="post" action="/accessManagement/organizations/update">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" class="form-control" required
                       value="<%= data.settings.name %>">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea type="text" name="description" id="description" class="form-control"><% data.settings.description %></textarea>
            </div>

            <div class="row">
                <button type="submit" class="btn btn-primary"><i class="bi bi-save2"></i>Save</button>
                <!--                <button class="btn btn-secondary"><i class="bi bi-x-lg"></i>Cancel</button>-->
            </div>
        </form>
    </div>
    <div class="tab-pane fade" id="access-tab-pane" role="tabpanel" aria-labelledby="access-tab" tabindex="0">
        <button class="btn btn-primary">Grant Role</button>
        <table>
            <thead>
            <tr>
                <th></th>
                <th>Name</th>
            </tr>
            </thead>
        </table>
    </div>
</div>
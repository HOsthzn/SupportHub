<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2><%= title %></h2>
        </div>

        <% if (error?.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <form action="/ticket/delete" method="post">
            <input type="hidden" name="id" id="id" value="<%= data.id %>">
            <dl>
                <dt>Project</dt>
                <dd><%= data.projectId?.name %></dd>
                <dt>Created By</dt>
                <dd><%= data.createdBy?.name %></dd>
                <dt>Assigned To</dt>
                <dd><%= data.assignedTo?.name %></dd>
                <dt>Status</dt>
                <dd><%= data.status %></dd>
                <dt>Title</dt>
                <dd><%= data.title %></dd>
                <dt>Description</dt>
                <dd><%= data.description %></dd>
            </dl>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-primary" href="/ticket/index">Back</a>
        </form>
    </div>
</div>

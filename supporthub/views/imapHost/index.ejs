<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2><%= title %></h2>
        </div>

        <% if (error?.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <a class="btn btn-primary" href="/imap/create">Add</a>
        <table>
            <thead>
            <tr>
                <th>User</th>
                <th>Inbox</th>
                <th>Refresh Interval</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <% for(let imapHost of data) { %>
                <tr>
                    <td><%= imapHost.user %></td>
                    <td><%= imapHost.inbox %></td>
                    <td><%= imapHost.refreshInterval %></td>
                    <td>
                        <a class="btn btn-secondary" href="/imap/edit/<%= imapHost.id %>">Edit</a>
                        <a class="btn btn-info" href="/imap/details/<%= imapHost.id %>">Details</a>
                        <a class="btn btn-danger" href="/imap/delete/<%= imapHost.id %>">Delete</a>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>

    </div>
</div>
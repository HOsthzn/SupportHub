<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2><%= title %></h2>
        </div>

        <% if (error?.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <form action="/project/create" method="post">
            <div class="form-group">
                <label class="form-label" for="clientId">Organization:</label>
                <select id="clientId" name="clientId" class="form-select">
                    <option value="-1" selected disabled>Select Organization</option>
                    <% listClient.forEach(client => { %>
                        <option value="<%= client.id %>"><%= client.name %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="name" class="form-label">Name:</label>
                <input type="text" name="name" id="name" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-secondary" href="/project/index">Back</a>
        </form>
    </div>
</div>
